{
  "name": "keep",
  "version": "1.0.2",
  "description": "Electron based application for managing KERI identifiers",
  "author": {
    "name": "Kevin Griffin",
    "email": "griffin.kev@gmail.com"
  },
  "main": "index.js",
  "license": "Apache-2.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-pkg": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "^18.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-log": "^4.4.6",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.1",
    "json": "^11.0.0",
    "node-fetch": "^3.2.3",
    "promise-retry": "^2.0.1"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icon",
        "osxSign": {
          "identity": "Developer ID Application: Kevin Griffin (WHU7A4EQ74)",
          "hardened-runtime": true,
          "entitlements": "entitlements.plist",
          "entitlements-inherit": "entitlements.plist",
          "signature-flags": "library"
        },
        "osxNotarize": {
          "appleId": "griffin.kev@gmail.com",
          "appleIdPassword": ""
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "keep"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "",
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "description": "keep"
          }
        }
      ]
    }
  }
}
